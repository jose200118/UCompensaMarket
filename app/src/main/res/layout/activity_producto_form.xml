<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="34dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_shopping_cart"
                android:scaleType="centerCrop"
                android:background="@drawable/border_image"
                android:padding="6dp"
                android:elevation="4dp" />

            <LinearLayout
                android:id="@+id/contenCamara"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="12dp">

                <ImageButton
                    android:id="@+id/btnSeleccionarImagen"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_camera"
                    android:background="@drawable/rounded_button_bg"
                    android:padding="10dp"
                    android:elevation="4dp"
                    android:contentDescription="Seleccionar imagen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subir imagen"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/edtImagenUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL de la imagen (opcional)"
            android:inputType="textUri"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del producto"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripci贸n"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicaci贸n: (sin ubicaci贸n)"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="12dp" />

        <!-- CONTENEDOR DEL MAPA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp">
            <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"/>
        </FrameLayout>

        <Button
            android:id="@+id/btnObtenerUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obtener ubicaci贸n actual"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnGuardarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>