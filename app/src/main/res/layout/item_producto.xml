<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_producto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_imgProducto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_nombreProducto"
                android:text="Nombre del producto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_precioProducto"
                android:text="$0.00"
                android:textColor="@color/teal_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Agregar al carrito -->
        <ImageButton
            android:id="@+id/btnAgregarCarrito"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_shopping_cart"
            app:tint="@color/success_color"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Agregar al carrito"
            android:layout_marginEnd="4dp"/>

        <!-- Ver detalle del producto-->
        <ImageButton
            android:id="@+id/btnVerDetalle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_contract"
            app:tint="@color/info_color"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ver detalle del producto"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_contract_edit"
            app:tint="@color/primary_color"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Editar"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/danger_color"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>